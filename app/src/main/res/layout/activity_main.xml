<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.login.MainActivity">

    <Button
        android:id="@+id/loginu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Login as User" />

    <Button
        android:id="@+id/logina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
android:text="Login as Admin"
        />


    <Button
        android:id="@+id/sign_up_user"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Sign Up as User"
        android:onClick="display"
        />

    <Button
        android:id="@+id/sign_up_admin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Sign Up as Admin"
        android:onClick="display"
        />




</LinearLayout>
